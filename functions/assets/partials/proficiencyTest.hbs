<!-- TODO: Make this really slick and animate each question one at a time, so there's a 'cascading' effect -->
<div class="columns is-multiline is-centered animate__animated animate__fadeIn">
    {{#each proficiencyTest as |pTQuestion index|}}
        <div class="column is-full">
            {{!-- Figure out some solution for numbering these --}}
            <h4 class="subtitle is-4">{{pTQuestion.question}}</h4>

            <div class="control pt__test-possible-answers">
                {{#each pTQuestion.answers as |possibleAnswer|}}
                    <label class="radio">
                        <input type="radio" name="answer">
                        {{possibleAnswer.answer}}
                    </label>
                {{/each}}
            </div>  
        </div>
    {{/each}}

    <div class="column is-full">
        <button class="button pt__submit-grade-button">
            Submit & Grade
        </button>
    </div>
</div>